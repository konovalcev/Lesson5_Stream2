<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Employees" Height="500" Width="900">
    <Grid Name="Employees">
        <ListBox Margin="10,10,0,0" Name="lbEmployees" SelectionMode="Single"
                 SelectionChanged ="lbEmployees_SelectionChanged"
                 VerticalAlignment="Top"                 
                 HorizontalAlignment="Left"
                 Height="250" Width="140"/>
        <ListBox Margin="812,10,10,0" Name="lbDepartments" SelectionMode="Single"
                 SelectionChanged ="lbDepartments_SelectionChanged"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Center"
                 Height="121" Width="70"/>
    </Grid>
</Window>